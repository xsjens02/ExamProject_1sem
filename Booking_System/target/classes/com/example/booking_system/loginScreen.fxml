<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.booking_system.Controller.Controllers.LoginScreenController">
   <children>
      <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
      <TextField fx:id="tfUsername" promptText="Brugernavn" maxWidth="200.0" />
      <PasswordField fx:id="pfPassword" promptText="Password" maxWidth="200.0" />
      <Label fx:id="failedLoginLabel" text="Forkert brugernavn eller password. PrÃ¸v igen." textFill="RED" visible="false" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick" text="Annuller" />
         </children>
      </HBox>
      <Button fx:id="forgotButton" mnemonicParsing="false" onAction="#onForgotButtonClick" text="Har du glemt dit password?" />
   </children>
</VBox>
