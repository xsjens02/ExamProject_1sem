<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="VBoxMain" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.booking_system.Controller.EditBookingController">
   <children>
      <Label text="Bookinger:">
         <VBox.margin>
            <Insets left="5.0" />
         </VBox.margin>
      </Label>
      <ListView fx:id="lwBookings" prefHeight="200.0" prefWidth="500.0">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </ListView>
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button minWidth="70.0" mnemonicParsing="false" onAction="#onDeleteClick" text="Slet">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
      <VBox>
         <children>
            <Label text="Titel:" />
            <TextField fx:id="txtTitle" maxWidth="200.0" promptText="booking titel" />
            <Label fx:id="lblErrorTitle" textFill="#ee0303" />
            <Label text="Gæster:" />
            <TextField fx:id="txtAmountGuest" maxWidth="200.0" promptText="antal gæster" />
            <Label fx:id="lblErrorGuest" textFill="#ee0303" />
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button minWidth="70.0" mnemonicParsing="false" onAction="#onCancelClick" text="Annuller">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button minWidth="70.0" mnemonicParsing="false" onAction="#onUpdateClick" text="Opdater">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
